            } else if (IsLogin == 'FA') {
                $("#liFINARMenu").prop("hidden", true);
                $("#liMSSDMenu").prop("hidden", false);
                $("#liMKTMenu").prop("hidden", true);
            } else if (IsLogin == 'FINAR') {
                $("#liFINARMenu").prop("hidden", false);
                $("#liMSSDMenu").prop("hidden", true);
                $("#liMKTMenu").prop("hidden", true);
            }
        });*@

    </script>

</body>
</html>