<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mapping Subdist</title>
      
    <!-- App favicon -->
    <link rel="shortcut icon" href="~/Content/assets/images/favicon.ico">
    <!-- App css -->

    <link href="~/Content/assets/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/assets/css/icons.css" rel="stylesheet" />
    <link href="~/Content/assets/css/metisMenu.min.css" rel="stylesheet" />
    <link href="~/Content/assets/css/style.css" rel="stylesheet" />
    <script src="~/Content/assets/js/modernizr.min.js"></script>
    <link href="~/Content/jquery.dataTables.min.css" rel="stylesheet" />
    <link href="~/Content/plugins/sweet-alert/sweetalert2.min.css" rel="stylesheet" />
    <link href="~/Content/select2.min.css" rel="stylesheet" />
    <link href="~/Content/tooltipster.bundle.min.css" rel="stylesheet" />
    <!-- jQuery  -->
    <script src="~/Content/assets/js/jquery.min.js" type="text/javascript"></script>
    <script src="~/Content/assets/js/bootstrap.bundle.min.js"></script>
    <script src="~/Content/assets/js/metisMenu.min.js"></script>
    <script src="~/Content/assets/js/waves.js"></script>
    <script src="~/Content/assets/js/jquery.slimscroll.js"></script>
    <script src="~/Scripts/jquery.dataTables.min.js"></script>
    <script src="~/Content/plugins/sweet-alert/sweetalert2.min.js"></script>
</head>
<body>
    <div id="wrapper">
        <!-- ========== Left Sidebar Start ========== -->
        <div class="left side-menu">
            <div class="slimscroll-menu" id="remove-scroll" style="height: 100vh">
                <!-- LOGO -->
                <div style="height: 48px"></div>
                <div class="topbar-left" style="margin-top: 24px">
                    <a href="/" class="logo">
                        <span>
                            <img src="~/Content/Image/LogoB7.png" width="80%" />
                        </span>
                        <i>
                            <img src="~/Content/Image/LogoB7.png" height="28" />
                        </i>
                    </a>
                </div>
                <!-- User box -->
                <div class="user-box">
                    @*<h4 style="margin-bottom: 48px; margin-top: -24px">Mapping Subdist & User</h4>*@
                    <p class="text-muted" style="margin-bottom: -8px">Welcome</p>
                    <h5><a href="/">@Request.RequestContext.HttpContext.Session["USERNAME"]</a> </h5> 
                    <p class="text-muted" style="margin-bottom: -4px">@Request.RequestContext.HttpContext.Session["NIK"]</p>
                    <p class="text-muted" style="margin-bottom: -8px">@Request.RequestContext.HttpContext.Session["JOBTTLNAME"]</p>

                    @*<p class="text-muted">Admin Head</p>*@
                </div>

                <!--- Sidemenu -->
                <div id="sidebar-menu">
                    <ul class="metismenu" id="side-menu">

                        <li class="menu-title">Menu</li>

                        <li>
                            <a href="/createuser">
                                <i class="dripicons-user"></i><span> Create User </span>
                            </a>
                        </li>
                        <li>
                            <a href="/mappingemail">
                                <i class="dripicons-mail"></i><span> Mapping Email </span>
                            </a>
                        </li>
                        <li>
                            <a href="mappinguser">
                                <i class="dripicons-user-id"></i><span> mappinguser </span>
                            </a>
                        </li>
                    </ul>

                </div>
                <!-- Sidebar -->
                <div id="sidebar-menu" style="bottom: 0px; position: fixed">
                    <ul class="metismenu" id="side-menu">
                        <li style="cursor: pointer">
                            <a id="btnLogout">
                                <i class="dripicons-exit"></i><span> Logout </span>
                            </a>
                        </li>
                    </ul>

                </div>
                <div class="clearfix"></div>

            </div>
            <!-- Sidebar -left -->

        </div>
        <!-- Left Sidebar End -->
        <!-- ============================================================== -->
        <!-- Start right Content here -->
        <!-- ============================================================== -->

        <div class="content-page">

            <!-- Top Bar Start -->
            <div class="topbar">



            </div>
            <!-- Top Bar End -->
            <!-- Start Page content -->
            <div class="content">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-12">
                            <div class="card-box">
                                @*<h4 class="header-title mb-4">Header</h4>*@

                                @RenderBody()
                            </div>
                        </div>
                    </div>

                </div> <!-- container -->

            </div> <!-- content -->

            <footer class="footer">
                @DateTime.Now.Year <span class="d-none d-sm-inline-block"> - PT. Bintang Toedjoe</span>
            </footer>

        </div>


        <!-- ============================================================== -->
        <!-- End Right content here -->
        <!-- ============================================================== -->

    </div>




    <!-- KNOB JS -->
    <!--[if IE]>
    <script src="../plugins/jquery-knob/excanvas.js"></script>
    <![endif]-->
    <script src="~/Content/plugins/jquery-knob/jquery.knob.js"></script>
    <script src="~/Scripts/jquery.slimscroll.js"></script>


    <!-- App js -->
    <script src="~/Content/assets/js/jquery.core.js"></script>
    <script src="~/Content/assets/js/jquery.app.js"></script>
    <script>
                $(document).ready(function () {
                    $("#sidebar-menu a").each(function () {
                        var pageUrl = window.location.href.split(/[?#]/)[0];
                        @*var pageUrl = window.location.href.substring(window.location.origin.length + 1)*@
                        if (this.href == pageUrl) {
                            $(this).addClass("mm-active");
                            $(this).parent().addClass("mm-active"); // add active to li of the current link
                            $(this).parent().parent().addClass("mm-show");
                            $(this).parent().parent().prev().addClass("mm-active"); // add active class to an anchor
                            $(this).parent().parent().parent().addClass("mm-active");
                            $(this).parent().parent().parent().parent().addClass("mm-show"); // add active to li of the current link
                            $(this).parent().parent().parent().parent().parent().addClass("mm-active");
                        }
                    });

            $('#btnLogout').on('click', function () {
                $.ajax({
                    type: "POST",
                    url: "auth/logout",
                    success: function (response) {
                         if (response === 'true') {
                             window.location.href = "/login";
                         }
                    }
                });
            });
        });

